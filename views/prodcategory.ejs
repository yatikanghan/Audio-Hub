<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AudioHub - Premium Audio Equipment</title>
    <link rel="stylesheet" href="/css/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Open+Sans:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    <%- include('header.ejs') %>
    
    <section class="main-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-12 text-center">
                    <h1 class="display-4 fw-bold mb-4"><%= category %></h1>
                </div>
            </div>
        </div>
    </section>

    <div class="container">
        <div class="row">
            <div class="productheading text-center mt-5">
                
                <h1>Our Products</h1>
                <br><br>
            </div>
            <br><br>
            <div class="productlistmain mt-5">
                <div class="row">

                    <% if(allproducts === 0) { %>
                        <p>No Products Available </p>
                    <% } else { %>
                    <% for(let product of allproducts) { %>
                
                    <div class="col-lg-3 col-md-4 col-sm-6 col-12 mb-4">
                        <a href="/productdetail/<%= product._id %>" class="text-decoration-none text-dark">
                          <div class="prodcard card h-100">
                            <!-- Image -->
                            <div class="prodimg mt-3">
                              <img src="<%= product.image.img1 %>" class="card-img-top" alt="<%= product.name %>">
                            </div>
                  
                            <!-- Details -->
                            <div class="card-body">
                              <h6 class="card-title productname mt-2"><b><%= product.name %></b></h6>
                                <div style="display: flex; justify-content: space-between; margin-right: 10px;">
                                    <p style="margin-bottom: 5px;">&nbsp; <%= product.brand %></p>
                                    <div><span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star"></span>
                                    </div>
                                </div>
                              
                              <h5 class="mb-1">&nbsp;<strong> <%= product.price %>.00 </strong> â‚¬</h5>
                              
                              <!-- <a href=""> -->
                                <div class="buybtn text-center">
                                    <button>Buy Now</button>
                                </div>
                              <!-- </a> -->
                            </div>
                          </div>
                        </a>
                      </div>

                    <% } %>
                    <% } %>
                    



                </div>
                
                  
            </div>

        </div>
    </div>




    <%- include('footer.ejs') %>



    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <script src="/js/style.js"></script>
</body>
</html>